    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Angular",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/PersonStatisticsWeb"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Telegram Bot with Nodemon",
            "runtimeExecutable": "node",
            "program": "${workspaceFolder}/PersonStatisticsTelegramBot/start-dev.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}